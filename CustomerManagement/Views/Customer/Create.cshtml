@model Customer

<!DOCTYPE html>
<html>
<head>
   
   
   
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    
</head>
<body>
    <div class="container">
        <h1>Yeni Müşteri</h1>

        <form asp-action="Create" method="post">
            <table class="table">
                <tr>
                    <td>
                        <label asp-for="FirstName">AD:</label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger">Boş bırakılamaz.</span>
                    </td>
                    <td>
                        <label asp-for="LastName">Soyad:</label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger">Boş bırakılamaz.</span>
                    </td>
                    <td>
                        <label asp-for="Email">E-posta:</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger">Geçerli bir e-posta adresi giriniz.</span>
                    </td>
                    <td>
                        <label asp-for="Identity">Kimlik:</label>
                        <input asp-for="Identity" class="form-control" />
                        <span asp-validation-for="Identity" class="text-danger">Boş bırakılamaz..</span>
                    </td>
                    <td>
                        <label asp-for="Phone">Telefon:</label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger">Boş bırakılamaz.</span>
                    </td>
                    <td>
                        <label asp-for="BirthDate">Doğum Tarihi:</label>
                        <input asp-for="BirthDate"  input type="date" class="form-control" />
                        <span asp-validation-for ="BirthDate" class="text-danger">Geçerli bir doğum tarihi giriniz.</span>
                    </td>
                    
                    <td>
                        <button type="submit" class="btn btn-success">Ekle</button>
                    </td>
                </tr>
            </table>
        </form>

        <a asp-action="Index" class="btn btn-secondary mt-3">Listeye Dön...</a>
    </div>

   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
