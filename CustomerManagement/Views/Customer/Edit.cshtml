@model Customer

<!DOCTYPE html>
<html>
<head>
   
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1>Müşteri Düzenle</h1>

        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label for="FirstName" class="form-label">Ad:</label>
                <input type="text" class="form-control" id="FirstName" asp-for="FirstName" />
                
            </div>
            <div class="mb-3">
                <label for="LastName" class="form-label">Soyad:</label>
                <input type="text" class="form-control" id="LastName" asp-for="LastName" />
               
            </div>
            <div class="mb-3">
                <label for="Email" class="form-label">E-posta:</label>
                <input type="email" class="form-control" id="Email" asp-for="Email" />
                
            </div>
            <div class="mb-3">
                <label for="Identity" class="form-label">Kimlik:</label>
                <input type="text" class="form-control" id="Identity" asp-for="Identity" />
                
            </div>
            <div class="mb-3">
                <label for="Phone" class="form-label">Telefon:</label>
                <input type="tel" class="form-control" id="Phone" asp-for="Phone" />
                
            </div>
            <div class="mb-3">
                <label for="BirthDate" class="form-label">Doğum Tarihi:</label>
                <input type="date" class="form-control" id="BirthDate" asp-for="BirthDate" />
               
            </div>
            <div>
                <button type="submit" class="btn btn-success">Kaydet</button>
            </div>
        </form>

        <a asp-action="Index" class="btn btn-secondary mt-3">Listeye Dön...</a>
    </div>

   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
